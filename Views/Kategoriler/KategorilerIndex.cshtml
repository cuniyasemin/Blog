@model IEnumerable<BlogProject.Models.Kategoriler>

@{
    ViewBag.Title = "KategorilerIndex";
    Layout = "~/Areas/AdminPaneli/Views/Shared/_LayoutPage1.cshtml";
}


<div class="content-wrapper">

    <!-- left column -->
    <div class="col-md-8 offset-md-2">
        <p>
            @Html.ActionLink("Create New", "KategoriEkleIndex")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.KategoriAdi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Aciklama)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.KategoriAdi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Aciklama)
    </td>
    <td>
        @Html.ActionLink("Edit", "KategoriGuncelleIndex", new { KategorilerID = item.KategorilerID }) |
        @Html.ActionLink("Details", "Details", new { KategorilerID = item.KategorilerID }) |
        @Html.ActionLink("Delete", "KategoriSil", new { KategorilerID = item.KategorilerID })
    </td>
</tr>
}

        </table>
        </div>
</div>